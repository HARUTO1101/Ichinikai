rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public lookup for order status by ticket
    match /orderLookup/{ticket} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth.token.admin == true || request.auth.token.staff == true;
      allow delete: if request.auth.token.admin == true;
    }

    // Orders created by customers (anonymous auth) and updated by admins/staff
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow update: if request.auth.token.admin == true || request.auth.token.staff == true;
      allow delete: if request.auth.token.admin == true;
      allow read: if request.auth.token.admin == true || request.auth.token.staff == true || request.auth.token.kitchen == true;
    }

    // Metadata such as call number counters needs to be writable by order creators
    match /metadata/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && docId == 'counters';
    }
  }
}
